<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <!-- the Header about the Location Parameters -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/locationHeader"
        android:textColor="#00ff00"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- empty line -->

    <!-- Client Phone no information -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:textStyle="bold" android:layout_marginLeft="85dp"/>

    <!-- empty line -->

    <EditText
        android:id="@+id/phonevalue"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:tag="phoneValue" android:layout_marginLeft="40dp" android:layout_marginRight="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" "
        android:textColor="#666666"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- the Latitude information -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Latitude"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:textStyle="bold" 
        android:layout_marginLeft="115dp"/>

    <EditText
        android:id="@+id/latitudeValue"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned|numberDecimal"
        android:tag="latitudeValue" 
        android:layout_marginLeft="40dp" 
        android:layout_marginRight="40dp"/>

    <!-- empty line -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" "
        android:textColor="#666666"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- the Longitude information -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Longitude"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:textStyle="bold" android:layout_marginLeft="110dp"/>

    <EditText
        android:id="@+id/longitudeValue"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned|numberDecimal"
        android:tag="longitudeValue" android:layout_marginLeft="40dp" android:layout_marginRight="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" "
        android:textColor="#666666"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/back_to_sms"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="smsButtonHandler"
        android:text="Sms Database"
        android:textSize="30px"
        android:textStyle="bold" />

    <Button
        android:id="@+id/back_to_map"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="mapButtonHandler"
        android:text="Map View"
        android:textSize="30px"
        android:textStyle="bold" />

    <Button
        android:id="@+id/optional"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="saveButtonHandler"
        android:text="Save Points"
        android:textSize="30px"
        android:textStyle="bold" />

</LinearLayout>
    